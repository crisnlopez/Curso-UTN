<div class="container" style="margin-top: 50px;">
  {{!-- Fila 1 --}}
  <div class="row">
    <p class="text-end text-dark">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger ms-3"><i
          class="fas fa-sign-out-alt me-1"></i>Cerrar sesi√≥n</a></p>
  </div>
  {{!-- Fin fila 1 --}}
  {{!-- Fila 2 --}}
  <div class="row mb-2">
    <div class="col-7" style="margin-top: -9px;">
      <h2 class="text-secondary">Listado de Novedades</h2>
    </div>
    <div class="col-3 text-right">
      <form class="d-flex">
        <input type="search" class="form-control me-2" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
        <button class="btn btn-secondary" type="submit">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </form>
    </div>
    <div class="col-2 text-end">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
    </div>
  </div>
  {{!-- Fin fila 2 --}}
  {{!-- Fila 3 --}}
  <div class="row">
    <div class="col">
      <table class="table table-striped">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td class="text-end">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{#if is_search}}
      {{#unless novedades.length}}
      No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}
    </div>
  </div>
  {{!-- Fin fila 3 --}}
</div>