<div class="container vh-100" style="margin-top: 25%;">
    <div class="row justify-content-center card py-4 shadow">
        <form action="/admin/login" method="post">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUser" placeholder="Usuario" name="usuario">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" placeholder="Contraseña" name="password">
                </div>
            </div>
            <button type="submit" class="btn btn-secondary">Ingresar</button>
        </form>
        {{#if error }}
        <p class="text-danger mt-3">El usuario o contraseña incorrecto</p>
        {{/if}}
    </div>
</div>